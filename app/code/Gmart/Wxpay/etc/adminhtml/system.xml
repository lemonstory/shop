<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="wxpay" translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Wechat Payment</label>
                <field id="active" translate="label comment" sortOrder="1" type="select" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="appId" translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>小程序ID</label>
                </field>

                <field id="signType" translate="label" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>签名方式</label>
                </field>
            </group>
        </section>
    </system>
</config>